<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/test1</item>
        <item name="colorControlNormal">@color/test2</item>
        <item name="colorControlActivated">@color/test</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


<style name="error_login">
    <item name="colorBackground">@color/colorPrimary</item>
    <item name="textColor">#ffffff</item>
    <item name="iconLeft">@drawable/ic_sentiment_dissatisfied_black_24dp</item>
    <item name="length">LONG</item>
    <item name="cornerRadius">9dp</item>
</style>
    <style name="error_Reg">
        <item name="colorBackground">@color/colorPrimary</item>
        <item name="textColor">#ffffff</item>
        <item name="iconLeft">@drawable/emaila</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">9dp</item>
</style>
</resources>
